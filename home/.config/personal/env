#!/usr/bin/env zsh

t(){
        tree -a -L $1
}

fs(){
    local host="$1"
    local ip="192.168.$2"
    local port=${3:-22}
    local folder

    if [[ -z $host ]]; then
        echo ""
        echo " ERROR: Host not provided! ðŸš¨"
        echo ""
        return
    fi

    echo ""
    echo " 1. MacOS"
    echo " 2. Linux"
    echo ""
    echo -n " â€¢ Which OS?: "
    read -r res
    echo ""
    if [[ $res == "1" ]]; then
        folder="/Users/$host"
    elif [[ $res == "2" ]]; then
        if [[ $host == "root" ]]; then
            folder="/"
        else
            folder="/home/$host"
        fi
    else
        echo " ERROR: Invalid option! ðŸš¨"
        echo ""
        return
    fi

    sshfs -o default_permissions -p $port "$host@$ip:$folder" ~/remote

    case "$OSTYPE" in
        darwin*)
            open ~/remote
            ;;
        linux-gnu*)
            nautilus ~/remote
            ;;
        *)
            echo " ERROR: Unsupported operating system! ðŸš¨"
            echo " OS: $OSTYPE"
            ;;
    esac
}

git_checkout(){
	if [ $# -eq 0 ]
	then
		git checkout $(git branch | fzf --height 20%)
	else
		git checkout $@
	fi
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}
