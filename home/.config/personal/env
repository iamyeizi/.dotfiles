#!/usr/bin/env zsh

if [[ "$OSTYPE" == "darwin"* ]]; then
    export STOW_FOLDERS="home"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    export STOW_FOLDERS="home,linux"
else
    echo "==> Unsupported operating system"
fi

t(){
        tree -a -L $1
}

fs(){
    local host="$1"
    local ip="192.168.$2"
    local folder
    case "$OSTYPE" in
        darwin*)
            folder="/home/$host"
            ;;
        linux-gnu*)
            folder="/Users/$host"
            ;;
        *)
            echo " -> Unsupported OS type: $OSTYPE"
            return 1
            ;;
    esac
    sshfs -o default_permissions "$host@$ip:$folder" ~/remote
    case "$OSTYPE" in
        darwin*)
            open ~/remote
            ;;
        linux-gnu*)
            nautilus ~/remote
            ;;
    esac
}

sdkls(){
        sdk ls $1 | rg installed
}

gitCheckout(){
	if [ $# -eq 0 ]
	then
		git checkout $(git branch | fzf --height 20%)
	else
		git checkout $@
	fi
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    pushd $DOTFILES
    git add .
    git commit -m "automatic commit from hell"
    git push origin main
    popd
}
